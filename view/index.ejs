<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
<nav class="navbar navbar-expand-md navbar-dark bg-success">
    <div class="container">
        <a href="/" class="navbar-brand">EJS CRUD</a>
        <button class="navbar-toggler" data-bs-toggler="collapse" data-bs-target="#menu">
            <span class="navbar-toggler-icon"> </span>
        </button>

        <div class="navbar-collapse collapse" id="menu">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a href="/home" class="nav-link">Home</a>
                </li>
                <li class="nav-item">
                    <a href="/create" class="nav-link">Create</a>
                </li>
            </ul>
        </div>
    </div>
</nav>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h4 class="display-3 text-secondary">Home page</h4>
        </div>
    </div>
    <div class="row">
      <%  users.forEach((item) => { %>
        <div class="col-md-4 mt-2 mb-2">
            <div class="card">
                <div class="card-header">
                    <h5 class="text-center"> <%= item.name %> </h5>
                </div>
                <div class="card-body">
                    <p>
                        <strong>Email</strong>
                        <span class="float-end"> <%= item.email %> </span>
                    </p>
                    <p>
                        <strong>Mobile</strong>
                        <span class="float-end"> <%= item.mobile %>  </span>
                    </p>
                    <p>
                        <strong>City</strong>
                        <span class="float-end"> <%= item.city %> </span>
                    </p>
                </div>
                <div class="card-footer">
                    <a href="/update/<%= item._id %>" class="btn btn-info btn-sm">Update</a>
                    <a href="/delete/<%= item._id %>" class="btn btn-danger btn-sm float-end">Delete</a>
                </div>
            </div>
        </div>
      <%  })  %>
    </div>
</div>




    <!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>